{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "strictNullChecks": false,
    // "noUnusedParameters": true,
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "lib": [
      "es2015",
      "dom"
    ],
    "paths": {},
    "types": [
      "core-js",
      "jasmine",
      "node",
      "marked",
      "highlight.js",
      "mathjax",
      "crypto-js"
    ]
  },
  "exclude": [
    "node_modules",
    "compiled",
    "dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
